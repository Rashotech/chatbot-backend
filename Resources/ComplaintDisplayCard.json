{
  //"$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  //"version": "1.3",
  "body": [
    {
      "type": "TextBlock",
      "text": "Complaint Details",
      "weight": "Bolder",
      "size": "Medium"
    },
    {
      "type": "TextBlock",
      "text": "Account Number: ${account.AccountNumber}"
    },
    {
      "type": "TextBlock",
      "text": "Category: ${complaint.Category}"
    },
    {
      "type": "TextBlock",
      "text": "Platform: ${complaint.Channel}"
    },
    {
      "type": "TextBlock",
      "text": "Date: ${complaint.Date}"
    },
    {
      "type": "TextBlock",
      "text": "Ref: ${complaint.TransactionRef}"
    },
    {
      "type": "TextBlock",
      "text": "Description: ${complaint.Description}"
    },
    {
      "type": "TextBlock",
      "text": "Amount: NGN ${complaint.Amount.toFixed(2)}"
    },
    {
      "type": "TextBlock",
      "text": "Status: ${complaint.ComplaintStatus == 0 ? 'Pending' : 'Resolved'}"
    }
  ],
  "backgroundImage": {
    "url": "https://example.com/background-image.jpg",
    "fillMode": "repeat"
  },
  "backgroundColor": "#0078D4",
  "padding": "20px",
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.4"
}
