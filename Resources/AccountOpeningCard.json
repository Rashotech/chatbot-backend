{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.3",
  "body": [
    {
      "type": "TextBlock",
      "size": "medium",
      "weight": "bolder",
      "text": "Account Opening Form",
      "horizontalAlignment": "center",
      "wrap": true
    },
    {
      "type": "Input.Text",
      "label": "First Name",
      "style": "text",
      "id": "FirstName",
      "isRequired": true,
      "errorMessage": "First Name is required",
      "placeholder": "Enter your First name"
    },
    {
      "type": "Input.Text",
      "label": "Last Name",
      "style": "text",
      "id": "LastName",
      "isRequired": true,
      "errorMessage": "Last Name is required",
      "placeholder": "Enter your Last name"
    },
    {
      "type": "Input.Text",
      "label": "Other Name",
      "style": "text",
      "id": "OtherName",
      "isRequired": false,
      "errorMessage": "Name is required",
      "placeholder": "Enter your Other name"
    },
    {
      "type": "Input.Text",
      "label": "Email",
      "style": "email",
      "id": "Email",
      "placeholder": "Enter your email"
    },
    {
      "type": "Input.Text",
      "label": "Phone",
      "style": "tel",
      "max": 11,
      "id": "PhoneNumber",
      "placeholder": "Enter your phone number"
    },
    {
      "type": "Input.Text",
      "label": "Bank Verification Number(BVN)",
      "style": "text",
      "max": 11,
      "id": "BVNNumber",
      "placeholder": "Enter your BVN"
    },
    {
      "type": "Input.Text",
      "label": "National Identification Number(NIN)",
      "style": "text",
      "id": "NIN",
      "max": 11,
      "placeholder": "Enter your NIN"
    },
    {
      "type": "Input.Date",
      "label": "Date of Birth",
      "id": "DateOfBirth"
    },
    {
      "type": "Input.Text",
      "label": "Address",
      "style": "text",
      "id": "Address",
      "isRequired": true,
      "errorMessage": "Address is required",
      "placeholder": "Enter your Address"
    },
    {
      "type": "Input.ChoiceSet",
      "id": "AccountType",
      "label": "Account Type",
      "style": "compact",
      "value": "Savings",
      "choices": [
        {
          "title": "Savings",
          "value": "Savings"
        },
        {
          "title": "Current",
          "value": "Current"
        }
      ]
    },
    {
      "type": "Input.Toggle",
      "label": "Please accept the terms and conditions:",
      "title": "I accept the terms and conditions (True/False)",
      "valueOn": "true",
      "valueOff": "false",
      "id": "AcceptsTerms",
      "isRequired": true,
      "errorMessage": "Accepting the terms and conditions is required"
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "Submit",
      "data": {
        "id": "1234567890"
      }
    }
  ]
}
